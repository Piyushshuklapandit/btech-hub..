{
  "info": {
    "name": "BTech Hub API",
    "description": "API collection for BTech Hub",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@btech.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Subjects",
      "item": [
        {
          "name": "Get All Subjects",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/subjects",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subjects"]
            }
          }
        },
        {
          "name": "Create Subject",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Data Structures\",\n  \"code\": \"CS101\",\n  \"description\": \"Learn fundamental data structures\",\n  \"semester\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/subjects",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subjects"]
            }
          }
        }
      ]
    },
    {
      "name": "Config",
      "item": [
        {
          "name": "Get Config",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/config",
              "host": ["{{baseUrl}}"],
              "path": ["api", "config"]
            }
          }
        },
        {
          "name": "Update Config",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"homeTitle\": \"Updated Title\",\n  \"homeDescription\": \"Updated description\",\n  \"firstYearDriveLink\": \"https://drive.google.com/...\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/config",
              "host": ["{{baseUrl}}"],
              "path": ["api", "config"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}
